@import './colors.styl';
@import './input_editable.styl';
@import './profile_card.styl';
@import './mailing_list.styl';
@import './url_input.styl';
@import './homepage.styl';

html,
body,
.main-app {
  height: 100%;
}

body {
  background-color: #E5E5E5;
  padding-top: 50px;
}

.rectangle {
  background-color: #F5F5F5;
  position: relative;
  width: 100%;
  padding-top: 50%;
  .content {
    position: absolute;
    top:      0;
    left:     0;
    bottom:   0;
    right:    0;
    display: flex;
    .left,
    .right {
      flex: 1 0 0px;
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }
}


//http://stackoverflow.com/questions/5445491/height-equal-to-dynamic-width-css-fluid-layout
//https://stackoverflow.com/questions/18516317/vertically-align-an-image-inside-a-div-with-responsive-height
.two-squares {
  overflow: hidden;
  .square {
    background-color: #F5F5F5;
    position: relative;
    float: left;
    width: 50%;
    padding-top: 50%;
    .square-inner-center {
      position: absolute;
      top:      0;
      left:     0;
      bottom:   0;
      right:    0;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      img {
        max-height:100%;
        max-width:100%;
        display: block;
      }
    }
    .square-inner-left {
      position: absolute;
      top:      0;
      left:     0;
      bottom:   0;
      right:    0;
      display: flex;
      flex-direction: column;
      align-items: left;
      justify-content: space-between;
      h2 {
        // todo, find a better way
        // temp fix for uneven content-editable outline
        line-height: inherit;
      }
    }
  }
}

.card-main-text {
  font-size: 24px;
}

.card-row {
  position: relative;
  &:before, &:after {
    //remve bootstrap default
    content: none;
  }
  .card-nav-prev {
    position: absolute;
    top: 50%;
    left: 0;
    margin-left: -12px;
    margin-top: -36px;
    cursor: pointer;
  }
  .card-nav-next {
    position: absolute;
    top: 50%;
    right: 0;
    margin-right: -12px;
    margin-top: -36px;
    cursor: pointer;
  }
  .icon {
    width: 50px;
    height: 50px;
    font-size: 24px;
    line-height: 50px;
    text-align: center;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 25px;
  }
}
