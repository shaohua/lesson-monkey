.card-panel {
  border: 0;
  border-radius: 0;
  background-color: transparent;

  .card-panel-body {
    display: table;
    min-height: 150px;
    padding: 0;
    text-align: center;

    .card-row {
      display: table-row;
      height: 100%;
      background-color: #F5F5F5;
      &:before, &:after {
        //remve bootstrap default
        content: none;
      }

      .card-col {
        display: table-cell;
        float: none;
        vertical-align: middle;
      }

      .card-left-col {
        //blank for now
      }

      .card-right-col {
        background-color: #FFFFFF;
        position: relative;
        text-align: left;
        vertical-align: top;
        .card-right-bottom-col {
          position: absolute;
          bottom: 0;
          right: 2px;
        }
      }
    }
  }
}

.card-url-input {
  min-width: 220px;
}

//http://stackoverflow.com/questions/5445491/height-equal-to-dynamic-width-css-fluid-layout
//https://stackoverflow.com/questions/18516317/vertically-align-an-image-inside-a-div-with-responsive-height
.card-pop {
  .square {
    &:before {
      content: "";
      display: block;
      padding-top: 100%; /* initial ratio of 1:1*/
    }
    .square-inner {
      position: absolute;
      top:      0;
      left:     0;
      bottom:   0;
      right:    0;

      overflow: hidden; //just for image

      &:before {
        content: "";
        display: inline-block;
        vertical-align: middle;  /* vertical alignment of the inline element */
        height: 100%;
      }

      img {
        max-height:100%;
        max-width:100%;
        vertical-align: middle;
        display: inline-block;
      }
    }
  }
}


