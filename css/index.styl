.home_main {
  background-image: url('/media/img_temp/home_background_1_1024x768.jpg');
  background-position: left top;
  background-repeat: no-repeat;
  background-size:cover;
  width:100%;
  height:100%;
}

.card-panel {
  border: 0;
  border-radius: 0;
  background-color: transparent;

  .card-panel-body {
    display: table;
    min-height: 150px;
    padding: 0;
    text-align: center;

    .card-row {
      display: table-row;
      height: 100%;
      background-color: #F5F5F5;
      &:before, &:after {
        //remve bootstrap default
        content: none;
      }

      .card-col {
        display: table-cell;
        float: none;
        vertical-align: middle;
      }

      .card-left-col {
        //blank for now
      }

      .card-right-col {
        background-color: #FFFFFF;
        position: relative;
        text-align: left;
        vertical-align: top;
        .card-right-bottom-col {
          position: absolute;
          bottom: 0;
          right: 2px;
        }
      }
    }
  }
}

